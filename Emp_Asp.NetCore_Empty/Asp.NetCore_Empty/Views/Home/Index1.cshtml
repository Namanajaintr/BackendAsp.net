@{
    //ViewData["Title"] = "Employee Details";
    <h3>@ViewData["Title"]</h3>

    //drawback - Explicitly convert the datatype during compilation in viewdata
    <h1>I am from Index1 page Details of a Employee in our company</h1>
    var empdata = ViewData["Employee"] as Asp.NetCore_Empty.Modal.Employee;
    <li>
        <ul>
            Name: @empdata.Name;

        </ul>
    </li>
    <li>
        <ul>
            ID: @empdata.ID;

        </ul>
    </li>
    <li>
        <ul>
            Address: @empdata.Address;

        </ul>
    </li>
    <li>
        <ul>
            Age: @empdata.Age;

        </ul>
    </li>
}
