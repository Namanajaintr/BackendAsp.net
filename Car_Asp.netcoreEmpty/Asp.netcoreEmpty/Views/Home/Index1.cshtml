@{Layout = "~/Views/Shared/_Layout.cshtml";}

@model Asp.netcoreEmpty.ViewModel.HomeCarIndex1
@{
    //4. ViewModel

    <h3 class="text-success">@Model.Title</h3>

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Title</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="https://st.depositphotos.com/2604049/4060/i/450/depositphotos_40605229-stock-photo-insurance-in-crystal-ball-life.jpg" width="100" height="500">
                    <h3 class="text-primary">Car Brand:@Model.car.Brand</h3>
                    <h3>Car Number: @Model.car.Car_No</h3>
                    <h3>Car Color: @Model.car.Color</h3>
                    <h3>Car Price: @Model.car.Price</h3>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-Car_No="@Model.car.Car_No" class="btn btn-primary">Back</a>
                </div>
            </div>
        </div>

    </div>

    @section Scripts {
        <script src="~/js/CustomJavascript.js"></script>
    }

}
